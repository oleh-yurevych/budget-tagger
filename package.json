{
  "name": "budget-tagger",
  "version": "1.0.0",
  "description": "Multi-user budget tracking application with Telegram bot and Monobank integration",
  "main": "index.js",
  "scripts": {
    "deploy": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "offline": "serverless offline",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "budget",
    "telegram",
    "monobank",
    "serverless",
    "aws"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.515.0",
    "@aws-sdk/client-secrets-manager": "^3.936.0",
    "@aws-sdk/client-sqs": "^3.515.0",
    "@aws-sdk/lib-dynamodb": "^3.515.0",
    "env-var": "^7.4.1",
    "grammy": "^1.20.3",
    "purify-ts": "^2.1.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.136",
    "@types/nock": "^10.0.3",
    "@types/node": "^18.19.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^8.56.0",
    "nock": "^14.0.10",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
